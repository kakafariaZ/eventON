<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.eventon.CadastroController">
    <children>
        <!-- Logo de cinema -->
        <ImageView fitHeight="401.0" fitWidth="301.0" pickOnBounds="true" preserveRatio="true" translateX="-150.0">
            <image>
                <Image url="@css/cinema_image.png" />
            </image>
        </ImageView>

        <!-- Logo do eventON -->
        <ImageView cache="true" cacheHint="QUALITY" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" translateX="150.0" translateY="-370.0">
            <image>
                <Image url="@css/logo_eventon2.png" />
            </image>
        </ImageView>

        <!-- Campos de entrada -->
        <TextField fx:id="login" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Digite seu login" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </TextField>

        <TextField fx:id="nome" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Digite seu nome" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </TextField>

        <TextField fx:id="email" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Digite seu email" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </TextField>

        <TextField fx:id="cpf" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Digite seu CPF" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </TextField>

        <PasswordField fx:id="senha" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Digite sua senha" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </PasswordField>

        <PasswordField fx:id="senha2" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" promptText="Confirme a senha" style="-fx-background-color: c5c5c5;" translateX="0.0">
            <font>
                <Font name="Poppins Medium" size="12.0" />
            </font>
        </PasswordField>

        <!-- Botão de cadastro -->
        <Button fx:id="registerButton" maxHeight="25.0" maxWidth="90.0" minHeight="25.0" minWidth="100.0" mnemonicParsing="false" onAction="#cadastrarUsuario" style="-fx-background-color: #258D19;" text="CADASTRAR" textFill="WHITE" translateX="0.0">
            <font>
                <Font name="Poppins SemiBold" size="13.0" />
            </font>
        </Button>

        <!-- Link para login -->
        <Hyperlink fx:id="loginLink" onAction="#handleLoginLinkAction" text="Já tem conta? Conecte-se" translateX="0.0"/>
    </children>
</VBox>
